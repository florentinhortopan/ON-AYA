{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.single"
  },
  "deploy": {
    "startCommand": "supervisord -c /etc/supervisor/conf.d/supervisord.conf",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

